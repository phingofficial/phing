<?xml version="1.0"?>
<project default="cleanup">

  <target name="init">
    <mkdir dir="result" />
  </target>

  <target name="cleanup">
    <delete dir="result" />
  </target>

  <target name="testLineContains" depends="init">
    <copy todir="result">
      <fileset dir="input"/>
      <filterchain>
        <filterreader classname="phing.filters.LineContains">
          <param type="contains" value="beta"/>
        </filterreader>
      </filterchain>
    </copy>
  </target>

  <target name="testLineContainsNegate" depends="init">
    <copy todir="result">
      <fileset dir="input"/>
      <filterchain>
        <filterreader classname="phing.filters.LineContains">
          <param type="contains" value="beta"/>
          <param type="negate" value="true"/>
        </filterreader>
      </filterchain>
    </copy>
  </target>

  <target name="testLineContainsMatchAny" depends="init">
    <copy todir="result">
      <fileset dir="input"/>
      <filterchain>
        <linecontains matchany="true">
          <contains value="alpha"/>
          <contains value="beta"/>
          <contains value="gamma"/>
        </linecontains>
      </filterchain>
    </copy>
  </target>

</project>
