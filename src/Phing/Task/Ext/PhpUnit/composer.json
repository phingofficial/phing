{
  "name": "phing/task-phpunit",
  "description": "PHPUnit related tasks.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "LGPL-3.0-only",
  "type": "phing-extension",
  "authors": [
    {
      "name": "Siad Ardroumli",
      "email": "siad.ardroumli@gmail.com"
    }
  ],
  "require": {
    "php": ">= 7.1"
  },
  "require-dev": {
    "phing/phing": "3.0.x-dev",
    "phpunit/phpunit": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "Phing\\Task\\Ext\\": "src/"
    }
  },
  "extra": {
    "phing-custom-taskdefs": {
      "phpunit": "Phing\\Task\\Ext\\PHPUnitTask",
      "phpunitreport": "Phing\\Task\\Ext\\PHPUnitReportTask"
    }
  }
}
