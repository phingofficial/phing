{
    "name": "phing/task-http",
    "description": "HTTP related tasks.",
    "license": "LGPL-3.0-only",
    "authors": [
        {
            "name": "Siad Ardroumli",
            "email": "siad.ardroumli@gmail.com"
        }
    ],
    "type": "phing-extension",
    "require": {
        "php": ">= 8.1"
    },
    "require-dev": {
        "phing/phing": "3.0.x-dev",
        "guzzlehttp/guzzle": "^7.9"
    },
    "autoload": {
        "psr-4": {
            "Phing\\Task\\Ext\\Http\\": ""
        }
    },
    "extra": {
        "phing-custom-taskdefs": {
            "http-request": "Phing\\Task\\Ext\\Http\\HttpRequestTask",
            "httpget": "Phing\\Task\\Ext\\Http\\HttpGetTask"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
